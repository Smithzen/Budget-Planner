<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:micro="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:Class="Budget_Planner.pages.TodaysSpending">

    <Grid Padding="0, 10 , 10, 0"
          RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto"
          RowSpacing="15"
          ColumnSpacing="2"
          ColumnDefinitions="auto, auto, *, auto"
          BackgroundColor="White">

        <Label x:Name="CurrentDateTime" FontSize="Large" VerticalTextAlignment="Center" Padding="20,0,0,0" Grid.Row="0" Grid.Column="0" TextColor="Black"/>
        <Button x:Name="addExpense" FontSize="Large" Text="+" WidthRequest="50"  HorizontalOptions="End" Grid.Row="0" Grid.Column="3"
                Clicked="AddExpense"/>

        <micro:ChartView x:Name="chartView" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4"  HeightRequest="400"/>


    </Grid>

</ContentPage>